%table
  %tbody
    - @guides.each do |guide|
      %tr
        %td= guide.title
        %td= guide.content
        %td= link_to 'Show', guide
        %td= link_to 'Edit', edit_guide_path(guide)
        %td= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Guide', new_guide_path
