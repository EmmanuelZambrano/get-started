= form_for @guide do |f|
  - if @guide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guide.errors.count, "error")} prohibited this guide from being saved:"
      %ul
        - @guide.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :category_id
    = f.select :category_id, options_from_collection_for_select(@category_options, "id", "name")
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
